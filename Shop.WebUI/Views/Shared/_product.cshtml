@model Product

<div class="col-md-4 ">

    <div class="card-deck">
        <div class="card mb-3">
            <img class="card-img-top img-fluid" src="~/images/@Model.ImageUrl" alt="@Model.Name" />
            <div class="card-body">
                <h4 class="card-title">
                    <a href="#">@Model.Name</a>
                </h4>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-outline-primary btn-sm">Details</a>
                    <a href="#" class="btn btn-outline-primary btn-sm ml-3">Add To Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>


